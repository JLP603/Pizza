<script src="scripts/NavbarScript.js"></script>
<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
    <h5 class="my-0 mr-md-auto font-weight-normal d-flex flex-row">
      Pizza Palace
      {{#if username}}
      <div class="ml-5 my-2 my-md-0 mr-md-3"><strong>Welcome {{username}}!</strong></div>
      {{/if}}
    </h5>
    <!-- <img src="../../public/img/plogo.png" alt="logo" class="logo"> -->
    <nav my-2 my-md-0 mr-md-3>
        {{#equals user_type "admin"}}
          <a class="p-2 text-dark" href="/manager_orders">Pending Customer Orders</a>
        {{/equals}}
        {{#notequals user_type "admin"}}
        <a class="p-2 text-dark" href="/">Home</a>
        <a class="p-2 text-dark" href="/menu">Menu</a>
        <a class="p-2 text-dark" href="/order">Order</a>
        {{#if username}}<a class="p-2 text-dark" href="/user_orders">My Order</a>{{/if}}
        {{/notequals}}
    </nav>

    {{#if username}}
    <div id="signout" class="ml-3 btn btn-outline-primary" href="">Sign out</div>
    {{else}}
    <a class="btn btn-outline-primary ml-3" href="/login">Sign in</a>
    {{/if}}
</div>