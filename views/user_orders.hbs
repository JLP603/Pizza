
<div class="d-flex flex-column content"> 
  <div class="container">
    <h2>My Order</h2>
    <br>

    <!-- IF NO ORDER -->
    <div id="no-order">
      <div class="d-flex flex-column title">
        <h4 class="item-name"><b>You currently have no order</b></h4>
        <h5 class="item-name"><a href="/order">Order here</a></h5>
      </div>
    </div>

    <!-- IF WITH ORDER -->
    <div id="has-order">
      <div class="d-flex flex-row justify-content-between title">
        <h4 class="item-name"><b>Status</b></h4>
      </div>
      <a style="text-decoration: none; color: rgb(33, 37, 41);">
        <div class="card d-flex flex-row justify-content-between home-box">
          <div class="home-col1">
            <button type="button" class="btn btn-outline-dark btn-block home-date">11/11/2020</button>
          </div>

          <div class="home-col1">
            <button type="button" class="btn btn-outline-dark btn-block home-date">00:00:00 am</button>
          </div>
              
          <div class="home-col1">
            <buttontype="button" id="pending" class="btn btn-warning btn-block home-status" data-toggle="modal" data-target="#myModal">Pending</button>
            <buttontype="button" id="delivered" class="btn btn-success btn-block home-status" data-toggle="modal" data-target="#myModal">Delivered</button>
          </div>  
        </div>      
      </a>
      <!-- The Modal -->
      <div class="modal" id="myModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Status</h4>
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
              Your order is currently being processed
            </div>
          </div>
        </div>
      </div>

      <br>
      <br>
      <br>

      <div class="d-flex flex-row justify-content-between title">
        <h4 class="item-name"><b>Order Details</b></h4>
      </div>
