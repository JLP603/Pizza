<link rel="stylesheet" href="css/styles_login.css">
<script src="scripts/loginScript.js"></script>

<div class="form-box">
  <div class="button-box">
    <div id="btn"></div>
    <button id="login-toggle" type="button" class="toggle-btn" >Log In</button>
    <button id="register-toggle" type="button" class="toggle-btn" >Register</button>
  </div>
  <div id="login" class="input-group">
    <div id="error1" class="error-text">Passwords do not match</div>
    <div id="confirm" class="matched"></div>

    <input id="username1"type="text" class="input-field"placeholder="Username">
    <input id="password"type="password" class="input-field"placeholder="Password">

    <span id="eye1" class="eye">
      <i id="hide1" class="fa fa-eye" ></i>
      <i id="hide2" class="fa fa-eye-slash"></i>
    </span>

    <button id="log" type="button" class="submit-btn">Log in</button>
  </div>
  <div id="register"class="input-group">

    <div id="error2" class="error-text">Passwords do not match</div>

    <input id="username2"type="text" class="input-field"placeholder="Username" name="username">
    <input id="pswrd_1"type="password" class="input-field"placeholder="Password" name="password">
    <span id="eye3" class="eyess">
      <i id="hide5" class="fa fa-eye" ></i>
      <i id="hide6" class="fa fa-eye-slash"></i>
    </span>
    <input id="pswrd_2"type="password" class="input-field"placeholder="Confirm Password" name="password2">
    <span id="eye2" class="eyes">
      <i id="hide3" class="fa fa-eye" ></i>
      <i id="hide4" class="fa fa-eye-slash"></i>
    </span>

    <input id="checkbox" type="checkbox" class="check-box" required><span>I agree to the terms and conditions</span>
    <button id="reg" type="submit" class="submit-btn">Register</button>
  </div>
</div>
